<script>

function Send() {
        var Data = new FormData();
        Data.append("mail", document.getElementById("Tmail").value);

    $.ajax({
        type: "POST",
        url: "/home/savemail",
        contentType: false,
        processData: false,
        data: Data,
        success: function (data) {
            if (data == true) {
                Notification("ایمیل شما با موفقیت ثبت شد", "success")
            }
            else {
                Notification("مشکلی پیش امده لطفا دوباره سعی کنید", "Error")
            }
        },
        error: function (xhr, ajaxOptions, thrownError) {
            alert(xhr.status);
            alert(thrownError);
        }
    });
}
</script>